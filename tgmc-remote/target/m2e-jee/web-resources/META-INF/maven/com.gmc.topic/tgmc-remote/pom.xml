  <build>
    <finalName>remoteweb</finalName>
    
    <resources>
	  	   <resource>
				<directory>src/main/resources/commons</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
			
			<resource>
				<directory>src/main/resources/${env}</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
	</resources>
	
	<plugins>
			<!-- Maven Jetty Plugin -->
	  	<plugin>
	      	<groupId>org.mortbay.jetty</groupId>
	      	<artifactId>maven-jetty-plugin</artifactId>
	      	<version>6.1.26</version>
	      	<configuration>
	      		<stopKey>stop</stopKey>
	      		<stopPort>${jetty.stop.port}</stopPort>
	      		<scanIntervalSeconds>0</scanIntervalSeconds>
	      		<contextPath>${jetty.context.path}</contextPath>
	      		<webDefaultXml>${jetty.web.xml}</webDefaultXml>
	          	<connectors>
		            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
		              <port>${jetty.run.port}</port>
		            </connector>
		            <connector implementation="org.mortbay.jetty.ajp.Ajp13SocketConnector">
	              		<port>${jetty.ajp.port}</port>
	            	</connector>
	          	</connectors>
	      	</configuration>
	      	<dependencies>
		      	<dependency>
			       <groupId>org.mortbay.jetty</groupId>
			       <artifactId>jetty-ajp</artifactId>
			       <version>6.1.26</version>
		     	</dependency>
     		</dependencies>
		</plugin>
			
		</plugins>		
  </build>
  
  <profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
